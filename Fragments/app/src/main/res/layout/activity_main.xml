<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cb.android.fragments.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:id="@+id/fragment1"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_red"
        android:name="com.cb.android.fragments.RedFragment"></fragment>
    <fragment
        android:layout_width="match_parent"
        android:id="@+id/fragment2"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_blue"
        android:name="com.cb.android.fragments.BlueFragment"></fragment>

</LinearLayout>
