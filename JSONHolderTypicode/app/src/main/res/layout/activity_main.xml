<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cb.android.jsonholdertypicode.MainActivity">

    <Button
        android:text="Users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="103dp"
        android:id="@+id/bv_users" />

    <Button
        android:text="Posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bv_users"
        android:layout_toRightOf="@+id/bv_users"
        android:layout_toEndOf="@+id/bv_users"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:id="@+id/bv_posts"
        android:layout_above="@+id/bv_albums" />

    <Button
        android:text="Albums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bv_users"
        android:layout_alignLeft="@+id/bv_users"
        android:layout_alignStart="@+id/bv_users"
        android:layout_marginTop="63dp"
        android:id="@+id/bv_albums" />

    <Button
        android:text="Todos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bv_todos"
        android:layout_alignBaseline="@+id/bv_albums"
        android:layout_alignBottom="@+id/bv_albums"
        android:layout_alignLeft="@+id/bv_posts"
        android:layout_alignStart="@+id/bv_posts" />
</RelativeLayout>
